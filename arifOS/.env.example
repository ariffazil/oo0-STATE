# Server Configuration
HOST=0.0.0.0
LOG_LEVEL=info

# AAA Cluster Ports (v53 Architecture)
GATEWAY_PORT=9000
AXIS_PORT=8001
ARIF_PORT=8002
APEX_PORT=8003

# Legacy Monolith Port (Deprecated but supported)
PORT=8000

# arifOS Constitutional Settings
GOVERNANCE_MODE=HARD  # or SOFT

# Database (PostgreSQL for VAULT999 ledger)
# Railway auto-sets DATABASE_URL when PostgreSQL plugin is added
DATABASE_URL=postgresql://user:password@localhost:5432/arifos

# Redis (for session state, 24h TTL)
# Railway auto-sets REDIS_URL when Redis plugin is added  
REDIS_URL=redis://localhost:6379

# MCP Transport Mode
AAA_MCP_TRANSPORT=sse  # sse, http, or stdio

# API Keys (optional - for external services)
BRAVE_API_KEY=  # For reality_search tool
BROWSERBASE_API_KEY=  # For web browsing

# Cloudflare Tunnel (optional)
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here

# Render.com (auto-set, but you can override)
RENDER=true