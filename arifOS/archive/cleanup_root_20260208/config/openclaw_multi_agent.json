{
  "agents": {
    "defaults": {
      "sandbox": {
        "mode": "off"
      }
    },
    "list": [
      {
        "id": "governor",
        "default": true,
        "workspace": "/root/.openclaw/workspace-governor",
        "desc": "The arifOS Kernel (Governance & Dispatch). The 'Eye'.",
        "tools": {
          "allow": ["*"]
        }
      },
      {
        "id": "agi_asi_bot",
        "workspace": "/root/.openclaw/workspace-agi-bot",
        "sandbox": {
          "mode": "all",
          "scope": "agent",
          "workspaceRoot": "/root/.openclaw/sandboxes/agi-bot"
        },
        "desc": "The Executor (AGI/ASI Logic). The 'Hands'.",
        "tools": {
          "deny": ["gateway", "config.apply", "config.patch"]
        }
      }
    ]
  },
  "bindings": [
    {
      "channel": "telegram",
      "accountId": "ariffazil",
      "peer": "dm",
      "agentId": "governor"
    },
    {
      "channel": "telegram",
      "accountId": "ariffazil",
      "peer": "group:arifOS_Engineering",
      "agentId": "agi_asi_bot"
    }
  ],
  "server": {
    "host": "0.0.0.0",
    "port": 4000
  }
}
